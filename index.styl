//==========
// Instapipe

.story-available
  background-image linear-gradient(rgb(186, 62, 138), #fba051)
  size 114px 114px
  z-index -10
  border-radius 70px
  margin-left -57px

  &.not-available
    background gray !important

  > img
    box-sizing content-box
    size 100px 100px
    border-radius 70px
    margin-left 3px
    margin-top 3px
    cursor pointer
    border 4px solid white

.story-viewer
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  z-index 100
  display none
  font 18px/24px default-font
  justify-content center

  > .overlay
    background-color rgba(0, 0, 0, 0.8)
    width 100%
    height 100%
    z-index -1
    position absolute

  > .content
    position relative
    width 512px
    max-width 80% // for mobile devices
    margin-top 30px

.story-viewer-media
  position absolute
  top 80px
  left 0
  right 0
  bottom 40px
  display flex
  align-items center
  justify-content center

  > div
    background-size contain
    background-repeat no-repeat
    background-position 50% 50%
    size 100% 100%

  > video
    max-width 100%
    max-height 100%

.story-viewer-progress-bar
  height 3px
  margin 10px 0
  display flex

  .item-bg
    border-radius 6px
    background-color rgba(187, 187, 187, 0.6)
    height 100%
    display block

  .item-fg
    background-color white
    height 100%
    border-radius 3px
    animation-timing-function linear

.story-viewer-header
  height 50px
  display flex
  align-items center

  > img
    display block
    size 50px 50px
    border-radius 25px
    cursor pointer
    box-sizing border-box
    margin-right 10px
    border 3px solid white

  > .info
    flex auto

    > .user-link a
      link-color white
      text-decoration none

    > .timestamp
      color asphalt
      font-size 16px

  > .powered-by-instapipe
    text-align right
    font-size 16px

    a
      link-color asphalt
      text-decoration none

.story-viewer-button
  position fixed
  top calc(50vh - 10px)
  background-color rgba(200, 200, 200, 0.88)
  padding 10px
  color black
  border-radius 20px
  width 40px
  height 40px
  display block
  font 18px/20px default-font
  text-align center
  cursor pointer
  z-index 1

  &.prev
    left 50px

  &.next
    right 50px

.story-viewer-dummy-content
  size 0 0
  opacity 0

@keyframes story-viewer-progress
  from { width: 0%; }
  to { width: 100%; }

//===============
// Media Queries

@media (max-width: 1279px)
  .container
      width auto
      padding 0

@media (max-width: 959px)
    body
        font 28px/30px default-font

    .instapipe
        margin 40px 0 20px 0

    #story-available
      margin 0 auto

    h1
        .first-name, .last-name
            width 50%

    main
        padding 0 20px

    section
        margin-bottom 30px

        h2
            margin-bottom 15px
            text-align left

        h2, p, ul
            float none
            width auto

        li
            margin-bottom 15px

    .footer
        font 12px/15px default-font
