@import "nib";

//========
// Colors

asphalt = #777777
black = #333333
blue = #3B5998
coinbase-cyan = #00649A
cyan = #55ACEE
gray = #BEBEC0
green = #19A84C
orange = #E58C2C
red = #EE3724
yellow = #F6B100

//=======
// Fonts

default-font = 'Cubano', sans-serif

@font-face
    font-family 'Cubano'
    src url('fonts/cubano-webfont.eot')
    src url('fonts/cubano-webfont.eot?#iefix') format('embedded-opentype'),
        url('fonts/cubano-webfont.woff2') format('woff2'),
        url('fonts/cubano-webfont.woff') format('woff'),
        url('fonts/cubano-webfont.ttf') format('truetype'),
        url('fonts/cubano-webfont.svg#cubanoregular') format('svg')
    font-weight normal
    font-style normal

//========
// Mixins

link-color(c)
    color c
    transition color .25s

    &:focus, &:hover
        color lighten(c, 25%)

//=======
// Reset

global-reset()

*
    box-sizing border-box

//========
// Styles

body
    font 32px/40px default-font
    color asphalt

a
    link-color asphalt

.instapipe
    margin 60px 0 20px 20%

.cortado
    img
        display block
        height 150px
        margin 60px auto 0

h1
    margin-bottom 20px

    a
        display block
        overflow hidden
        text-decoration none

    .first-name
        display block
        float left
        width 20%
        text-align right
        padding-right 10px
        color gray

    .last-name
        display block
        float left
        width 80%
        color red

.container
  width 900px
  margin 0 auto

section
    overflow hidden
    margin-bottom 10px

    h2
        float left
        width 20%
        text-align right
        padding-right 10px
        color gray

    p, ul
        float left
        width 80%

    li
        padding-left 20px
        text-indent -20px
        margin-bottom 10px

.sub
  font-size 20px
  line-height 32px
  padding-top 8px

.sup
  font-size 20px
  line-height 32px
  padding-bottom 8px

#more
  cursor pointer
  font-size 20px
  color gray
  link-color gray

#disclosure
  display none

.footer
    margin 40px 20px 20px
    font 14px/20px default-font
    text-align center

